<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administration</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="font-sans">
  <header class="bg-gray-700 p-5 text-left">
      <h1 class="text-xl text-white font-bold m-0">Administration</h1>
  </header>

  <div class="flex h-screen">
      <aside class="w-1/5 bg-gray-100 p-5 shadow-lg flex flex-col justify-start">
          <h2 class="text-xl font-bold mb-2">Produkter</h2>
      </aside>

      <section class="w-4/5 p-5">
          <header class="flex justify-between items-center">
              <h3 class="text-black, font-bold">Produkter</h3>
              <div class="flex space-x-2">
              <button id="loadProductsButton" class="py-2 px-4 bg-green-600 text-white rounded hover:bg-green-500">
                Ladda Produkter
            </button>

              <button class="py-2 px-4 bg-green-600 text-white rounded hover:bg-green-500" onclick="location.href='/admin/products/new'">
                  Ny produkt
              </button>
            </div>
          </header>

          <table class="w-full border-collapse mt-5">
              <thead class="bg-gray-50">
                  <tr>
                      <th class="p-3 border border-gray-300 text-left">Namn</th>
                      <th class="p-3 border border-gray-300 text-left">SKU</th>
                      <th class="p-3 border border-gray-300 text-left">Pris</th>
                  </tr>
              </thead>
              <tbody id="productTableBody">
                
              </tbody>
          </table>
      </section>
  </div>
  <script src="/javascripts/admin.js"></script>
</body>
</html>
